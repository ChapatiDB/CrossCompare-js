extends layout

block links
	link(href='css/dc.css', rel='stylesheet', type='text/css')

block content
	// Content Header (Page header)
	section.content-header
		h1
			| Dashboard
			small Air Traffic Overview

	// Main content
	section.content
		.row
			// Test Chart 1
			.col-md-6.col-sm-6.col-xs-12
				.box.box-primary
					.box-header.with-border
						i.fa.fa-bar-chart-o
						|	
						h3.box-title Test Chart 1
						.box-tools.pull-right
							button.btn.btn-box-tool(data-widget='collapse')
								i.fa.fa-minus
					.box-body
						#testchart1(style='height: 200px;')
					//- // Loading Icon
					//- .overlay#testchart1-loading
					//- 	i.fa.fa-refresh.fa-spin

			// Total Entries (Box)
			.col-md-3.col-sm-6.col-xs-12
				.small-box.bg-blue
					.inner
						h3 0
						p Number of DB entries
					.icon
						i.fa.fa-plane
					a.small-box-footer(href='#')
						| More info 
						i.fa.fa-arrow-circle-right

			// TEST
			.col-md-3.col-sm-6.col-xs-12
				.info-box
						span.info-box-icon.bg-blue
							i.fa.fa-plane
						|								 
						.info-box-content
							span.info-box-text Flights
							|									 
							span.info-box-number XXXX

			// TEST Progress
			.col-md-3.col-sm-6.col-xs-12
				.info-box.bg-blue
						span.info-box-icon
							i.fa.fa-bookmark-o
						|								 
						.info-box-content
							span.info-box-text Flights
							|									 
							span.info-box-number XXXXXX
							|									 
							.progress
								.progress-bar(style='width: 60%')
							|									 
							span.progress-description
								| 60% Increase in 30 Days

block scripts
	script(src='js/d3.min.js', type='text/javascript')
	script(src='js/crossfilter.min.js', type='text/javascript')
	script(src='js/dc.min.js', type='text/javascript')
	script(src='js/queue.min.js', type='text/javascript')
	script(src='js/airport.js', type='text/javascript')