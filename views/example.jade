mixin loading
	// Loading overlay and icon
	.overlay.loading
		i.fa.fa-refresh.fa-spin

mixin info
	// Information tooltip
	.box-header
		h3.box-title Info
		.box-tools.pull-right
			button.btn.btn-box-tool.info_close
				i.fa.fa-times